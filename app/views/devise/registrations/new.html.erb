<script type="text/javascript">
  var stripe = Stripe("<%= Rails.application.credentials.stripe[:publishable_key] %>");
  var elements = stripe.elements();

  var card = elements.create('card', {
    'style': {
      'base': {
        'fontFamily': 'Arial, sans-serif',
        'fontSize': '18px',
        'color': '#C1C7CD',
      },
      'invalid': {
        'color': 'red',
      },
    }
  });

  card.mount("#<%= :card %>");
